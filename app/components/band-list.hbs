<ul class="pl-2 pr-8">
  {{!-- this.bands is a property defined in the corresponding component class --}}
  {{#each this.bands as |item|}}
    <li class="mb-2">
      <LinkTo
        class={{if item.isActive "border-purple-400 border-l-4 pl-2"}}
        {{!-- The band links previously point to the bands.band.songs route. --}}
        {{!-- We want the top-level route for the bands.band route to act as a --}}
        {{!-- redirect hub, so we need to modify those links to point to bands.band. --}}
        @route="bands.band"
        @model={{item.band.id}}
      >
        {{item.band.name}}
      </LinkTo>
    </li>
  {{/each}}
</ul>